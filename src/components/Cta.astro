<section class="section cta">
  <div class="container">
    <div class="cta-content">
      <h2>Ready to Find the Right Help?</h2>
      <p>Join others who have found successful treatment through RehabRate's authentic reviews from real people.</p>
      <div class="cta-buttons">
        <a href="/centers" class="btn btn-primary">Search Treatment Centers</a>
        <a href="/reviews/new" class="btn btn-secondary">Share Your Experience</a>
      </div>
    </div>
  </div>
</section>

<style>
  .cta {
    background: linear-gradient(135deg, var(--color-primary) 0%, #5c6bc0 100%);
    color: white;
    text-align: center;
    border-radius: var(--border-radius);
    margin: 2rem auto;
    max-width: var(--max-width);
  }
  
  .cta-content {
    padding: 3rem 2rem;
  }
  
  h2 {
    font-size: 2rem;
    margin-bottom: 1rem;
  }
  
  p {
    font-size: 1.125rem;
    margin-bottom: 2rem;
    max-width: 600px;
    margin-left: auto;
    margin-right: auto;
  }
  
  .cta-buttons {
    display: flex;
    gap: 1rem;
    justify-content: center;
    flex-wrap: wrap;
  }
  
  .btn-primary {
    background-color: white;
    color: var(--color-primary);
  }
  
  .btn-primary:hover {
    background-color: #f0f0f0;
    color: var(--color-primary);
  }
  
  .btn-secondary {
    background-color: transparent;
    color: white;
    border: 2px solid white;
  }
  
  .btn-secondary:hover {
    background-color: rgba(255, 255, 255, 0.1);
    color: white;
  }
</style>