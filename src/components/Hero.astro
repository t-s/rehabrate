<section class="hero">
  <div class="container">
    <div class="hero-content">
      <h1>Find the Right Path to Recovery</h1>
      <p>RehabRate helps you find and review treatment centers.</p>
      <div class="hero-buttons">
        <a href="/reviews" class="btn btn-primary">Read Reviews</a>
        <a href="/about" class="btn btn-secondary">Learn More</a>
      </div>
    </div>
    <div class="hero-image">
      <img src="/images/hero-placeholder.svg" alt="People supporting each other in recovery" />
    </div>
  </div>
</section>

<style>
  .hero {
    padding: 0;
    background: linear-gradient(to right, var(--color-background) 0%, rgba(255, 255, 255, 0.9) 100%);
  }
  
  @media (min-width: 768px) {
    .hero {
      padding: 4rem 0;
    }
  }

  .hero .container {
    display: grid;
    grid-template-columns: 1fr;
    gap: 2rem;
    align-items: center;
  }

  h1 {
    font-size: 2.5rem;
    line-height: 1.2;
    margin-bottom: 1.5rem;
    color: var(--color-text);
  }

  p {
    font-size: 1.25rem;
    margin-bottom: 2rem;
    color: var(--color-text-light);
    max-width: 600px;
  }

  .hero-buttons {
    display: flex;
    gap: 1rem;
    flex-wrap: wrap;
  }

  .hero-image img {
    border-radius: var(--border-radius);
    box-shadow: 0 20px 25px -5px rgba(0, 0, 0, 0.1), 0 10px 10px -5px rgba(0, 0, 0, 0.04);
    max-height: 400px;
    object-fit: cover;
    width: 100%;
  }

  @media (max-width: 767px) {
    .hero-image {
      order: -1;
      margin-bottom: 0.1rem;
    }
    
    .hero-image img {
      max-height: 110px;
    }
    
    .hero-content {
      text-align: center;
    }
    
    .hero-content p {
      margin: 0 auto 0.3rem;
      font-size: 0.8rem;
      line-height: 1.1;
      max-width: 90%;
    }
    
    h1 {
      margin-bottom: 0.1rem;
      font-size: 1.2rem;
      line-height: 1;
    }
    
    .hero-buttons {
      justify-content: center;
      gap: 0.2rem;
    }
    
    .hero .container {
      gap: 0.1rem;
    }
  }

  @media (min-width: 768px) {
    .hero .container {
      grid-template-columns: 1fr 1fr;
    }

    h1 {
      font-size: 3rem;
    }
  }
</style>