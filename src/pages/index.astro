---
import Layout from '../layouts/Layout.astro';
import Hero from '../components/Hero.astro';
import Features from '../components/Features.astro';
import Cta from '../components/Cta.astro';
---

<Layout title="Find and Rate Addiction Treatment Centers">
  <Hero />
  
  <div class="how-it-works section">
    <div class="container">
      <h2 class="section-title text-center mb-8">How RehabRate Works</h2>
      
      <div class="steps">
        <div class="step">
          <div class="step-number">1</div>
          <h3>Search</h3>
          <p>Find treatment centers based on location, specialties, insurance acceptance, and more.</p>
        </div>
        
        <div class="step">
          <div class="step-number">2</div>
          <h3>Compare</h3>
          <p>Read verified reviews and see expert ratings to compare different treatment options.</p>
        </div>
        
        <div class="step">
          <div class="step-number">3</div>
          <h3>Connect</h3>
          <p>Contact centers directly through our platform to ask questions or schedule a consultation.</p>
        </div>
        
        <div class="step">
          <div class="step-number">4</div>
          <h3>Review</h3>
          <p>After treatment, share your experience to help others find the right care.</p>
        </div>
      </div>
    </div>
  </div>
  
  <Features />
  
  <Cta />
</Layout>

<style>
  .section-title {
    font-size: 2rem;
    color: var(--color-text);
  }
  
  .steps {
    display: grid;
    grid-template-columns: 1fr;
    gap: 2rem;
    margin: 0 auto;
    max-width: 1000px;
  }
  
  .step {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
  }
  
  .step-number {
    background-color: var(--color-primary);
    color: white;
    width: 40px;
    height: 40px;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-weight: bold;
    margin-bottom: 1rem;
  }
  
  .step h3 {
    margin-bottom: 0.5rem;
    color: var(--color-text);
  }
  
  .step p {
    color: var(--color-text-light);
    max-width: 300px;
  }
  
  @media (min-width: 640px) {
    .steps {
      grid-template-columns: repeat(2, 1fr);
    }
  }
  
  @media (min-width: 768px) {
    .steps {
      grid-template-columns: repeat(4, 1fr);
    }
  }
</style>